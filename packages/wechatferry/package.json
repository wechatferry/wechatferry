{
  "name": "wechatferry",
  "type": "module",
  "version": "0.0.8",
  "description": "wechat robot framework based on wechatferry",
  "author": "mrrhq <sanhua@himrr.com>",
  "license": "MIT",
  "funding": "https://github.com/sponsors/mrrhq",
  "homepage": "https://github.com/wechatferry/wechatferry#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/wechatferry/wechatferry"
  },
  "bugs": "https://github.com/wechatferry/wechatferry/issues",
  "keywords": [
    "wechat",
    "wcferry",
    "robot"
  ],
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.mts",
      "default": "./dist/index.mjs"
    },
    "./agent": {
      "types": "./dist/agent.d.mts",
      "default": "./dist/agent.mjs"
    },
    "./puppet": {
      "types": "./dist/puppet.d.mts",
      "default": "./dist/puppet.mjs"
    },
    "./plugins": {
      "types": "./dist/plugins.d.mts",
      "default": "./dist/plugins.mjs"
    }
  },
  "main": "dist/index.mjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "unbuild",
    "dev": "unbuild --stub"
  },
  "dependencies": {
    "@wechatferry/agent": "workspace:*",
    "@wechatferry/core": "workspace:*",
    "@wechatferry/plugins": "workspace:*",
    "@wechatferry/puppet": "workspace:*"
  }
}
